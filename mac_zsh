export PATH=/usr/local/opt/coreutils/libexec/gnubin:~/repo/tkdcopyrun:~/repo/mactoolkit:$PATH:$(go env GOPATH)/bin:~/.local/bin

alias cdd='cd ~/repo'

proxy () {
    if pgrep openvpn &> /dev/null 
    then
        export http{,s}_proxy=$(cat ~/.proxy)
    else
        noproxy
    fi
}

noproxy () {
  unset http{,s}_proxy
}

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
#export FZF_BASE=/usr/local/bin
