[push]
	default = current
[alias]
    logdog = log --decorate --oneline --graph
    logdogsimple = log --decorate --oneline --graph --simplify-by-decoration
    undo = reset --hard
    su = submodule update
    suir = submodule update --init --recursive
	co = checkout
	br = branch
	cm = commit
	st = status
	unstage = reset HEAD --
	last = log -1 HEAD
    fix = "!f() { ${EDITOR} `git diff --name-only`; }; f"

[url "https://bbgithub.dev.bloomberg.com/"]
	insteadOf = bbgithub:
	
[credential]
	helper = osxkeychain

[merge]
    # A wonderful default diffing tool.
    tool = vimdiff
    # Provide base context to aid in conflict resolution.
    conflictstyle = diff3
	
